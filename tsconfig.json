{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "es2020",
      "esnext.asynciterable"
    ],
    "outDir": "./dist",
    "incremental": false,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "examples",
    "dist",
    "spec",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}